<div id="breadcrumbs-wrapper">
	<div class="row">
		<ul class="breadcrumbs">
            <% if !@breadcrumbs %>
                <% @breadcrumbs = get_default_breadcrumbs %>
            <% end %>
		    <% @breadcrumbs.each_with_index do |b, index| %>
  				<li><% if index + 1 < @breadcrumbs.count %>
  						<%= link_to(b[:title], b[:url]) %>
  					<% else %>
  						<%= content_tag(:span, b[:title], class: 'current') %>
  					<% end %>
  				</li>
  			<% end %>
		</ul>
	</div>
</div>